/* components/data-list/data-list.wxss */

.list-wrap {
  border: 1px solid red;
  width: 100%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
}

.list-item {
  border-radius: 10rpx;
  width: 94%;
  margin: 20rpx auto;
  box-shadow: 0px 3rpx 15rpx 0px rgba(0, 68, 163, 0.1);
  display: flex;
  flex-direction: column;
}

.list-item-title {
  border-bottom: 1rpx solid #dcdcdc;
  width: 100%;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-item-content {
  border-bottom: 1rpx solid #dcdcdc;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-item-footer {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.list-item-footer-left {
  border-right: 1rpx solid #dcdcdc;
}

.list-btn {
  width: 60% !important;
  height: 40rpx !important;
  font-weight: normal;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.cancel-btn {
  background-color: #f00;
  color: #fff;
}

.confirm-btn {
  background-color: #00a2ef;
  color: #fff;
}
