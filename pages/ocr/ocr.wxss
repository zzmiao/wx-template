/* pages/certification/ocr/ocr.wxss */

page {
  background: #fff;
  width: 100%;
  height: 100%;
}

.rowContainer {
  padding: 0 40rpx 40rpx 40rpx;
  display: flex;
  justify-content: space-between;
}

.first {
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
}

.item {
  width: 100%;
  height: auto;
}

.item-img {
  margin-left: auto;
  margin-right: auto;
  justify-content: center;
  display: flex;
  flex-direction: column;
  position: relative;
}

