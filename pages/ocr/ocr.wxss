.cancelImg {
  z-index: 999;
  position: absolute;
  top: 17rpx;
  right: 70rpx;
  width: 40rpx;
  height: 40rpx;
}

.item-title {
  padding-top: 10rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.zhrbutton {
  height: 92rpx;
  line-height: 92rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background: #fa9c3e;
  color: #fff;
}

.zhrbutton[disabled] {
  background: #ccc !important;
  color: #fff !important;
}
