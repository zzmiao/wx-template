/* pages/signOneName/signOneName.wxss */
page {
  width: 100%;
  min-height: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
}

.signCanvas {
  background-color: #f5f5f5;
  width: 100%;
}

.sign-layout {
  width: 100%;
  height: 254rpx;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: column;
}

.warning-layout {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tip {
  width: 6rpx;
  height: 40rpx;
  background: #e5304d;
}

.txt {
  color: #333;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.btn_layout {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.tip_text {
  position: fixed;
  right: -50rpx;
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
  color: #999;
}

.sign_btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  color: #fff;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  margin: 0 15rpx;
  padding: 0 0;
}

.sign_btn::after {
  border: 0 !important;
}

.clear_btn {
  background-color: #e5304d;
}

.save_btn {
  background-color: #e5304d;
}